<div class="cover-new">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-3">旅行新規投稿</h1>
    </div>
    <% if @post.errors.any? %>
      <div class="card text-center card text-white bg-danger mb-3">
        <%= @post.errors.count %>件のエラーが発生しました
        <% @post.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      </div>
    <% end %>
    <div class="row justify-content-center">
      <%= form_with model: @post, url: posts_path, local: true do |f| %>
      <div class="form-group">
        <label class="form-label", for="location">旅行先</label>
        <%= f.text_field :location, class: "form-control", id: "location" %>
      </div>
      <div class="form-group">
        <label class="form-label", for="text">感想</label>
        <%= f.text_area :text, rows: 10, class: "form-control", id: "text" %>
      </div>
      <div class="form-group">
        <label class="form-label" for="image">画像</label><br>
        <%= f.attachment_field :image, id: "image" %>
      </div>
      <%= f.submit "投稿する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
